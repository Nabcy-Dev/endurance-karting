# Configuration MongoDB
# Remplacez par votre URI de connexion MongoDB

# Pour MongoDB local (installation locale)
MONGODB_URI=mongodb://localhost:27017/karting-endurance

# Pour MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/karting-endurance

# Configuration du serveur
PORT=5000
NODE_ENV=development

# Configuration React (port frontend)
REACT_APP_PORT=3000

# Configuration API météo (optionnel)
REACT_APP_WEATHER_API_KEY=your_openweathermap_api_key_here

# Configuration React (optionnel)
REACT_APP_API_URL=http://localhost:5000 